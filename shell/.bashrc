export ANDROID_NDK_ROOT=$HOME/local/share/ndk
export ANDROID_TOOLCHAIN=$ANDROID_NDK_ROOT/toolchains/arm-linux-androideabi-4.4.3/prebuilt/linux-x86
export FLIP_DESK="(╯°□°）╯︵ ┻━┻"

